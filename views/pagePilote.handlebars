{{>listeRepPiloPartial}}

<div>
    <div>
        <img src="/image/pilote/{{photoOfficiel.PHOADRESSE}}" alt="Photo Officiel" >
    </div>
    <div>
        <p><strong>Nom :</strong> {{detailPerso.PILNOM}} {{this.PILPRENOM}}</p>
        <p><strong>Date de naissance:</strong> {{formatDate detailPerso.PILDATENAIS 'dddd D MMMM YYYY'}}</p>
        <p><strong>Nationalité :</strong> {{detailPerso.PAYNAT}}</p>
        <p><strong>Ecurie :</strong>
            {{#if nomEcurie.ECUNOM}}
                {{nomEcurie.ECUNOM}}
            {{else}}
                aucune écurie cette année
            {{/if}}
            </p>
    </div>
    <div>
        <p><strong>Poids :</strong> {{detailPerso.PILPOIDS}} kg</p>
        <p><strong>Taille :</strong> {{detailPerso.PILTAILLE}} cm</p>
    </div>
</div>
<div>
    <strong>Principaux sponsors:</strong>
    {{#each detailSponsor}}
        <p><strong>{{this.SPONOM}}</strong> ({{this.SPOSECTACTIVITE}})</p>
    {{/each}}
</div>
<div>
    <p><strong>Qui suis je ?</strong> {{detailPerso.PILTEXTE}}</p>
</div>
<div>
    {{#each photosNonOfficiel}}
        <img src="/image/pilote/{{this.PHOADRESSE}}" alt="image">
    {{/each}}
</div>
