<img src="/image/cat_resultat.png" alt="Trophé du résultat" />
<h1>Saisie des resultats {{gpnum}}</h1>
<table>
<tr>
    <th></th>
    <th>Place</th>
    <th>Pilotes</th>
    <th>Temps</th>
    <th>Points</th>
    {{#each resultatsGP}}
        <tr>
            <td>
                <form action="/resultats/supprimer/{{../gpnum}}" method="post">
                    <input type="hidden" name="gpnum" value="{{../gpnum}}">
                    <input type="hidden" name="pilnum" value="{{this.PILNUM}}">
                    <input type="image" src="/image/act_delete.png"  alt="supprimer">
                </form>
            </td>
            <td>{{inc @index }}</td>
            <td>{{this.PILNOM}}</td>
            <td>{{this.TEMPSCOURSE}}</td>

            {{#if this.NBPOINT.PTNBPOINTSPLACE}}
                <td>{{this.NBPOINT.PTNBPOINTSPLACE}}</td>
            {{else}}
                <td>0</td>
            {{/if}}
        </tr>
    {{/each}}
    <tr>
        <td></td>
        <form action="/resultats/{{../gpnum}}" method="post">
            <td><select id="pilnum" name="pilnum">
                {{#each pilotes}}
                    <option value="{{this.PILNUM}}"> {{this.PILNOM}} </option>
                {{/each}}
            </select>
            </td>
            <td>
                <input type="number" name="temps" min="0" max="60"> :
                <input type="number" name="temps" min="0" max="60"> :
                <input type="number" name="temps" min="0" max="60">
            </td>
            <td><input type="submit" value="OK">
        </form>
    </tr>
</table>
