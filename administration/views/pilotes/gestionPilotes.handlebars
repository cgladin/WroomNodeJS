<div id="presentationGestion">
    <img src="/image/cat_pilote.png" alt="logo">
    <h1>Gestion des pilotes</h1>
    <a href="pilotes/ajoutPilote"><img src="/image/act_add.png" alt="logoAjout"> Ajouter un pilote</a>
</div>

{{#if pilotes}}
    <div id="tableauPilote">
        <table>
            <tr>
                <th> Nom </th>
                <th> Prénom </th>
                <th> Date de naissance </th>
                <th> Actions</th>
            </tr>
            {{#each pilotes}}
                <tr>
                    <td>
                        {{ this.PILNOM }}
                    </td>
                    <td>
                        {{ this.PILPRENOM}}
                    </td>
                    <td>
                        {{formatDate this.PILDATENAIS "DD/MM/YYYY"}}
                    </td>
                    <td>
                        <a href="/pilotes/modifier/{{this.PILNUM}}"> <img src="/image/act_edit.png" alt="Edit_image" /> MODIFIER</a>
                        <a href="/pilotes/supprimer/{{this.PILNUM}}"> <img src="/image/act_delete.png" alt="Edit_image" /> SUPPRIMER</a>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <p>Aucun pilotes enregistré</p>
{{/if}}