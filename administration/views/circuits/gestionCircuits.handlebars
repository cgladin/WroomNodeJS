<div id="presentationGestion">
    <img src="/image/cat_circuit.png" alt="Drapeau du circuit" />
    <h1>Gestion des Circuits</h1>
    <p><a href="/circuits/ajoutCircuit"> <img src="/image/act_add.png" alt="Ajout_image" />AJOUTER UN CIRCUIT</a></p>
</div>
{{#if circuits}}
    <div id="tableauPilote">
        <table>
            <tr>
                <th> Nom </th>
                <th> Longueur </th>
                <th> Nombres de spectateurs </th>
                <th> Actions </th>
            </tr>
            {{#each circuits}}
                <tr>
                    <td>
                        {{ this.CIRNOM }}
                    </td>
                    <td>
                        {{ this.CIRLONGUEUR}}
                    </td>
                    <td>
                        {{this.CIRNBSPECTATEURS}}
                    </td>
                    <td>
                        <a href="/circuits/modifier/{{this.CIRNUM}}"> <img src="/image/act_edit.png" alt="Edit_image" /> MODIFIER</a>
                        <a  href="/circuits/supprimer/{{this.CIRNUM}}"> <img src="/image/act_delete.png" alt="Edit_image" /> SUPPRIMER</a>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <p>Aucun circuit enregistr√© </p>
{{/if}}
