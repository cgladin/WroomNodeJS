<form action="#" method="post">

        <label for="nom">
            <strong>Nom </strong>
        <input type="text" name="nom" required>
        </label>

        <label for="longueur">
            <strong>Longueur</strong>
        <input type="text" name="longueur" required>
        </label>

        <label for="pays">
            <strong>Pays</strong>
        <select name="pays">
            {{#each pays}}
                <option value="{{this.PAYNUM}}"> {{this.PAYNOM}}</option>
            {{/each}}
        </select>
    </label>

    <label for="image">
        <strong>Image</strong>
        <input type="file" name="img"/>
    </label>


        <label for="nbspectateur">
            <strong>Nombre de spectateur</strong>
            <input type="text" name="nbspectateur">
        </label>

        <label for="description">
            <strong>Description</strong>
            <input type="text" name="description">
        </label>

    <input type="submit" value="AJOUTER">
</form>