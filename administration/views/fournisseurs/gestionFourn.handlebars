<div id="presentationGestion">
    <h1>Gestion des fournisseurs</h1>

    <p><a href="/fournisseurs/ajoutFourn"> <img src="/image/act_add.png" alt="Ajout_image" />AJOUTER UNE FOURNISSEUR </a></p>
</div>
{{#if fournisseurs}}
    <div id="tableauPilote">
        <table>
            <tr>
                <th> Nom </th>
                <th> Adresse </th>
                <th> Actions </th>
            </tr>
            {{#each fournisseurs}}
                <tr>
                    <td>
                        {{ this.FPNOM}}
                    </td>
                    <td>
                        {{ this.FPADRESSE}}
                    </td>
                    <td>
                        <a  href="/fournisseurs/modifier/{{this.FPNUM}}"><img src="/image/act_edit.png" alt="Edit_image" />MODIFIER</a>
                        <a  href="/fournisseurs/supprimer/{{this.FPNUM}}"><img src="/image/act_delete.png" alt="Edit_image" />SUPPRIMER</a>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <p>Aucune écurie enregistrée </p>
{{/if}}
