<div class="ajout">


    <form action="#" method="post" enctype="multipart/form-data">
        <h1>Ajouter une ecurie</h1>
        <label for="nom">
            <strong>Nom </strong>
            <input type="text" name="nom" required>
        </label>
        </br></br>
        <label for="directeur">
            <strong>Directeur</strong>
            <input type="text" name="directeur" required>
        </label>
        </br></br>
        <label for="adresse">
            <strong>Adresse du siege</strong>
            <textarea name="adresse" rows="3" cols="70" required></textarea>
        </label>
        </br></br>
        <label for="point">
            <strong>Points</strong>
            <input type="number" name="point"> pts
        </label>
        </br></br>
        <label for="pays">
            <strong>Pays</strong>
            <select name="pays" required>
                {{#each pays}}
                    <option value="{{this.PAYNUM}}"> {{this.PAYNOM}}</option>
                {{/each}}
            </select>
        </label>
        </br></br>
        <label for="fournPneu">
            <strong>Fournisseur de pneu</strong>
            <select name="fournPneu" required>
                {{#each fournPneu}}
                    <option value="{{this.FPNUM}}"> {{this.FPNOM}}</option>
                {{/each}}
            </select>
        </label>
        </br></br>
        <label for="image">
            <strong>Image</strong>
            <input type="file" name="image" accept="image/png, image/jpeg" required/>
        </label>
        </br></br>
        <input id="valider" type="submit" value="AJOUTER">
    </form>

