<form action="#" method="post" enctype="multipart/form-data">
    <h1>Modifier une ecurie</h1>
    <label for="nom">
        <strong>Nom </strong>
        <input type="text" name="nom" value="{{ecurie.ECUNOM}}" required>
    </label>
    </br></br>
    <label for="directeur">
        <strong>Directeur</strong>
        <input type="text" name="directeur" value="{{ecurie.ECUNOMDIR}}" required>
    </label>
    </br></br>
    <label for="adresse">
        <strong>Adresse du siege</strong>
        <textarea name="adresse" rows="3" cols="70" required>{{ecurie.ECUADRSIEGE}}</textarea>
    </label>
    </br></br>
    <label for="point">
        <strong>Points</strong>
        <input type="number" name="point" value="{{ecurie.ECUPOINTS}}"> pts
    </label>
    </br></br>
    <label for="pays">
        <strong>Pays</strong>
        <select name="pays" required>
            <option value="{{ecuPays.PAYNUM}}">{{ecuPays.PAYNOM}}</option>
            {{#each pays}}
                <option value="{{this.PAYNUM}}"> {{this.PAYNOM}}</option>
            {{/each}}
        </select>
    </label>
    </br></br>
    <label for="fournPneu">
        <strong>Fournisseur de pneu</strong>
        <select name="fournPneu" required>
            {{#if ecuFP}}
                <option value="{{ecuFP.FPNUM}}"> {{ecuFP.FPNOM}}</option>
            {{/if}}
            {{#each fournPneu}}
                {{#if ecuFP}}
                        <option value="{{this.FPNUM}}"> {{this.FPNOM}}</option>
                {{else}}
                    <option value="{{this.FPNUM}}"> {{this.FPNOM}}</option>
                {{/if}}
            {{/each}}
        </select>
    </label>
    </br></br>
    <label for="image">
        <strong>Image</strong>
        <input type="file" name="image" accept="image/png, image/jpeg"/>
        <input type="hidden" value="{{image.ECUADRESSEIMAGE}}" name="oldImage">
    </label>
    </br></br>
    <input type="submit" value="AJOUTER">
</form>