<div id="presentationGestion">
    <img src="/image/cat_sponsor.png" alt="sponsor" />
    <h1>Gestion des sponsors</h1>
    <p><a href="sponsors/ajoutSponsor"> <img  src="/image/act_add.png" alt="Ajout_image" />AJOUTER UN SPONSOR</a></p>
    <p><a href="sponsors/ajoutSponsorise"> <img  src="/image/act_add.png" alt="Ajout_image" />SPONSORISER UN PILOTE</a></p>

</div>
{{#if sponsors}}
    <div id="tableauPilote">
        <table>
            <tr>
                <th> Nom </th>
                <th> Directeur </th>
                <th> Actions</th>
                <th> Pilote Sponsorisé </th>
            </tr>
            {{#each sponsors}}
                <tr>
                    <td>
                        {{ this.SPONOM }}
                    </td>
                    <td>
                        {{ this.SPOSECTACTIVITE}}
                    </td>
                    <td>
                        <a href="/sponsors/modifier/{{this.SPONUM}}"><img src="/image/act_edit.png" alt="Edit_image" />MODIFIER</a>
                        <a  href="/sponsors/supprimer/{{this.SPONUM}}"><img src="/image/act_delete.png" alt="Edit_image" />SUPPRIMER</a>
                    </td>
                    <td>
                        <img src="/image/act_edit.png" alt="Edit_image" /><a href="/sponsors/gestionSponsorise/{{this.SPONUM}}">VOIR</a>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <p>Aucun sponsor enregistré </p>
{{/if}}
